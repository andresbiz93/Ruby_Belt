<a href = "/users/<%= @user.id %>">My Playlist</a>

<h1>Welcome, <%= @user.first_name %> <%= @user.last_name %></h1>

<% if @songs.length > 0 %>

    <table class = "table">

        <thead class = "thead-dark">

            <tr>

                <th>Artist</th>
                <th>Title</th>
                <th>No. of Times Song Has Been Added</th>
                <th>Add to Playlist</th>

            </tr>

        </thead>

        <tbody>

            <% @songs.each do |song| %>

                <tr>

                    <td><%= song.artist %></td>
                    <td><a href = "/songs/<%= song.id %>"><%= song.title %></a></td>
                    <td><%= song.number %></td>
                    <td>
                        <form action = "/songs/<%= song.id %>/add" method = "post">
                            
                            <input type = "hidden" name = "authenticity_token" value = "<%= form_authenticity_token %>"/>
                            
                            <button type = "submit">Add</button>

                        </form>
                    </td>

                </tr>

            <% end %>

        </tbody>

    </table>

<% end %>

<form action = "/songs/create" method = "post">

    <input type = "hidden" name = "authenticity_token" value = "<%= form_authenticity_token %>"/>

    <h3>Add a Song</h3>

    <p>Title:</p>
    <input type = "text" name = "song[title]" />

    <p>Artist:</p>
    <input type = "text" name = "song[artist]" />

    <button type = "submit">Add Song</button>

</form>